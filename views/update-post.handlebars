<section>
  <h2>Update a Post</h2>

  <form class="update-post-form">
    <div>
      <label for="post-title">Title</label>
      <input
        type="text"
        id="post-title"
        name="post-title"
        value="{{post.title}}"
      />
    </div>
    <div>
      <label for="post-text">Post</label>
      <textarea
        id="post-text"
        name="post-text"
      >{{post.post_text}}</textarea>
    </div>
    <button type="submit" class="btn">Update with Changes</button>
    <button type="button" class="delete-post-btn">Delete this post</button>
  </form>
</section>

<script src="/js/update-post.js"></script>