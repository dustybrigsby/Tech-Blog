{{#if posts.length}}
<section>
  <h2>My Posts</h2>
  <ol class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> dashboard-post-info post}}      
    </li>
    {{/each}}
  </ol>
</section>
{{else}}
<section>
  <h3>I haven't made any posts yet.</h3>
</section>
{{/if}}

<button type="submit"><a href="/dashboard/new">Add New Post</a></button>